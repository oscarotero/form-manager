{
    "name": "form-manager/form-manager",
    "type": "library",
    "description": "PHP-HTML form manager",
    "keywords": ["form", "html", "data", "validator"],
    "homepage": "https://github.com/oscarotero/form-manager",
    "license": "MIT",
    "authors": [
        {
            "name": "Oscar Otero",
            "email": "oom@oscarotero.com",
            "homepage": "http://oscarotero.com",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "oom@oscarotero.com",
        "issues": "https://github.com/oscarotero/form-manager/issues"
    },
    "require": {
        "php": ">=7.2",
        "symfony/validator": "^5"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0 || ^8.0 || ^9.0",
        "nyholm/psr7": "^1.0",
        "friendsofphp/php-cs-fixer": "^3",
        "oscarotero/php-cs-fixer-config": "^1 || ^2",
        "phpstan/phpstan": "^1 || ^2"
    },
    "autoload": {
        "psr-4": {
            "FormManager\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FormManager\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": "phpcs",
        "cs-fix": "php-cs-fixer fix",
        "phpstan": "phpstan analyse",
        "test": "phpunit",
        "coverage": "phpunit --coverage-text",
        "coverage-html": "phpunit --coverage-html=coverage"
    }
}
